server {
  server_name api.idativista.org;
  # root /usr/share/nginx/;
  # index index.html;

  ########################  REST APIs ###############
  location /api {
    return 302 /api/;
  }

  location /api/ {
    proxy_pass http://localhost:3000/;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_cache_bypass $http_upgrade;
  }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/api.idativista.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/api.idativista.org/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}


server {
  return 301 https://$host$request_uri;

  listen 80;
  listen [::]:80;
  return 404; # managed by Certbot
}
server {
    if ($host = api.idativista.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


  server_name api.idativista.org;
    listen 80;
    return 404; # managed by Certbot
}

